.title {
  width: 100%;
  height: 110rpx;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  background-color: white;
}

.title .icon {
  width: 60rpx;
  height: 60rpx;
}

.title .name {
  flex: 1;
  margin-left: 15rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #2a2e3f;
}

.item {
  margin-top: 1rpx;
  width: 100%;
  height: 110rpx;
  background: #fff;
}

.item input {
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  background: #fff;
  border: 0;
}
.tip_title {
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #ff6700;
  line-height: 45rpx;
}
.tip1 {
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #a3aeba;
  line-height: 40rpx;
}
.button {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: #0794fc;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  border-radius: 0;
}