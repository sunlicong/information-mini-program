<!--pages/inviteFriend/inviteFriend.wxml-->
<view class="container">
  <view class='top_bg'>
    <image src='/image/invite_top_bg.png' class='top_bg' mode='aspectFit'></image>
    <view class='text1'>资讯</view>
  </view>
  <view class='card'>
    <view class='view1'>邀请好友</view>
    <view class='view2'>
      <text class='text2'>立得<text class='text3'>50</text>点钻</text>
    </view>
    <view class='view3'>后续还有更多关联收益</view>
    <view class='view4'>
      <text class='text2'>好友得<text class='text3'>20</text>点钻</text>
    </view>
    <view class='view3'>未邀请用户10点钻</view>
    <view class='view5'>发个朋友圈，躺着把钱赚</view>
  </view>
  <view class='tip_view'>
    <view class='line'></view>
    <view class='tip1'>
      <image src='/image/invite_img_1.png' class='tip_img' mode='aspectFit'></image>
      <view class='tip_text'>分享邀请链接或任意文章</view>
    </view>
    <view class='tip1'>
      <image src='/image/invite_img_2.png' class='tip_img' mode='aspectFit'></image>
      <view class='tip_text'>好友获得20点钻</view>
    </view>
    <view class='tip1'>
      <image src='/image/invite_img_3.png' class='tip_img' mode='aspectFit'></image>
      <view class='tip_text'>奖励到账</view>
    </view>
  </view>
  <button open-type='share' class='btn'>立即邀请</button>
</view>