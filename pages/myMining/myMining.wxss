/* pages/myMining/myMining.wxss */

.top {
  width: 100%;
  height: 600rpx;
  position: relative;
}

.top_bg {
  position: absolute;
  width: 100%;
  height: 600rpx;
}

.top_content {
  position: absolute;
  width: 100%;
  height: 600rpx;
}

.top_content_menu {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 30rpx;
}

.invite {
  width: 145rpx;
  height: 66rpx;
  line-height: 66rpx;
  background: rgba(255, 255, 255, 0.1) none repeat scroll 0 0 !important;
  border-radius: 0 100rpx 100rpx 0;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
}

.help {
  width: 145rpx;
  height: 66rpx;
  line-height: 66rpx;
  background: rgba(255, 255, 255, 0.1) none repeat scroll 0 0 !important;
  border-radius: 100rpx 0 0 100rpx;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.help image {
  margin-left: 5rpx;
  width: 30rpx;
  height: 30rpx;
}

.wallet {
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  width: 90rpx;
  height: 90rpx;
}

.mining_non {
  text-align: center;
  margin-top: 127rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 40rpx;
}

.mining {
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 420rpx;
  position: relative;
}

.mining_item {
  position: absolute;
  display: flex;
  flex-direction: column;
}

.mining_item .img_mining {
  width: 90rpx;
  height: 90rpx;
}

.mining_item .num {
  width: 100%;
  height: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.mining_item .coin {
  width: 100%;
  height: 12rpx;
  text-align: center;
  color: #fff;
  font-size: 12rpx;
}

.height-130 {
  width: 100%;
  height: 120rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.left {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.right {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 30rpx;
}

.margin-left-20 {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #051426;
}

.size-30 {
  margin-left: 15rpx;
  width: 30rpx;
  height: 30rpx;
}

.quan-total {
  color: #fe6503;
}

.arrow {
  width: 12rpx;
  height: 21rpx;
  margin-left: 12rpx;
}

.balance_rmb {
  line-height: 33rpx;
  font-size: 24rpx;
  color: #a3aeba;
}

.divid_content {
  margin-top: 1rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.divid_content .title {
  margin-top: 38rpx;
  font-size: 28rpx;
  color: #051426;
}

.divid_content .price {
  margin-top: 26rpx;
  font-size: 32rpx;
  color: #fe6503;
}

.divid_content .coin {
  margin-top: 22rpx;
  font-size: 24rpx;
  color: #a3aeba;
}

.divid_content .get {
  margin-top: 20rpx;
  margin-bottom: 38rpx;
  width: 208rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  background: #0794fc;
  font-size: 34rpx;
  color: #fff;
}

button::after {
  border: 0;
}
