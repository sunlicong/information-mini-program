/* pages/myFans/myFans.wxss */
.item{
    margin-top: 1rpx;
    width: 100%;
    height: 150rpx;
    background: #ffffff;
    display: flex;
    align-items: center;
}
.cover{
    margin-left: 30rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    background: #f4f4f4;
}
.nick{
    flex: 1;
    margin-left: 24rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #333333;
}
.follow{
    margin-right: 30rpx;
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #0794FC;
    border-radius: 4rpx;
    font-size: 24rpx;
    color: #FFFFFF;
    text-align: center;
}
.yes{
    background: #ffffff;
    border: 1px solid #333333;
    border-radius: 4rpx;
    font-size: 24rpx;
    color: #333333;
}