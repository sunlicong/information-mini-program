/* pages/cashWithdrawal/cashWithdrawal.wxss */

.title {
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  background-color: white;
}

.icon {
  margin-left: 30rpx;
  width: 60rpx;
  height: 60rpx;
}

.name {
  flex: 1;
  margin-left: 15rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #2a2e3f;
}

.address_view {
  margin-top: 20rpx;
  width: 100%;
  background: #fff;
}

.address_view .address_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 110rpx;
  border-bottom: 2rpx solid #dedede;
}

.address_view .text1 {
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333;
}

.address_view .text2 {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #a1a1a1;
}

.address_view .content {
  padding: 30rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #051426;
  line-height: 40rpx;
}

.address_view .address {
  margin-top: 10rpx;
}

.amount_view {
  margin-top: 20rpx;
  width: 100%;
  background: #fff;
}

.amount_view .amount_input {
  padding-top: 40rpx;
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #999;
}

.amount_view .amount_input .text {
  margin-left: 30rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(161, 161, 161, 1);
  line-height: 40rpx;
}
.amount_view .amount_input .price_view {
  margin-top: 15rpx;
  height: 42rpx;
  line-height: 42rpx;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  font-size:42rpx;
  color: #333333;
  font-family:PingFangSC-Medium;
  font-weight:500;
}
.amount_view .amount_input .price_view input{
  flex: 1;
  margin-left: 20rpx;
  margin-right: 30rpx;
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
}
.amount_view .desc{
  padding: 30rpx;
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#333333;
  line-height:30rpx;
}
.amount_view .desc .text1{
  margin-bottom: 10rpx;
}
.amount_view .desc .text3{
  color: #FF6700;
}
.button {
  position: fixed;
  left: 50rpx;
  right: 50rpx;
  bottom: 150rpx;
  width: 650rpx;
  height: 98rpx;
  background-color: #ff6700;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  border-radius: 0;
}

.tip {
  position: fixed;
  bottom: 80rpx;
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #4a4a4a;
}
