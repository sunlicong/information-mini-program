/* pages/publish/publish.wxss */

.item {
  margin-top: 1rpx;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  line-height: 110rpx;
  background-color: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 32rpx;
  color: #051426;
}

.item .input {
  flex: 1;
  text-align: right;
  height: 110rpx;
  line-height: 110rpx;
  margin-left: 20rpx;
}

.item .input_class {
  font-size: 32rpx;
  color: #a3aeba;
}

.tip {
  margin-left: 30rpx;
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #a3aeba;
  line-height: 40rpx;
}

.item_name {
  flex: 1;
}

.right {
  display: flex;
  align-items: center;
}

.quan-total {
  font-size: 28rpx;
  color: #a3aeba;
}

.arrow {
  width: 12rpx;
  height: 21rpx;
  margin-left: 12rpx;
}

.preview {
  position: fixed;
  width: 100%;
  height: 98rpx;
  bottom: 0;
  background-color: #0794fc;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  border-radius: 0;
}

.preview::after {
  border: 0;
}
.disabledBtn{
  background: #A3AEBA;
}
.color051426 {
  color: #051426;
}
