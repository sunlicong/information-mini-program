/* pages/myProfile/myProfile.wxss */
.head{
  width: 100%;
  height: 120rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.cover{
  width: 120rpx;
  height: 120rpx;
  margin-left: 27rpx;
  border-radius: 120rpx;
  background-color: rgba(163, 174, 186, 0.08);
}
.info{
  flex: 1;
  margin-left: 24rpx;
  font-size: 32rpx;
  color: #333333;
}
.info_num{
  margin-top: 18rpx;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #333333;
}
.follow{
  margin-right: 30rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #0794FC;
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}
.desc{
  width: 100%;
  line-height: 100rpx;
  background: #FFFFFF;
}
.desc_info{
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #A3AEBA;
}
.tab{
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #FFFFFF;
  display: flex;
}
.tab_item{
  width: 50%;
  height: 100%;
  text-align: center;
}
.tab-select{
  color: #0794FC;
  border-bottom: 4rpx solid #0794FC;
}
.tab-non{
  color: #A3AEBA;
}
.item_card{
  margin-top: 20rpx;
  width: 100%;
  height: 325rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
}
.item_card .item_user{
  margin-top: 30rpx;
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
}
.item_card .item_user .item_cover{
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  
}
.item_card .item_user .item_nick{
  flex: 1;
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #A3AEBA;
}
.item_card .item_user .item_time{
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #A3AEBA;
}
.item_card .item_opt{
  margin-top: 32rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #051426;
}
.item_card .item_info{
  margin-left: 30rpx;
  margin-top: 15rpx;
  margin-right: 30rpx;
  height: 140rpx;
  background: rgba(163, 174, 186, 0.08);
  display: flex;
}
.item_card .item_info .item_img{
  width: 220rpx;
  height: 140rpx;
}
.item_content{
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  line-height: 44rpx;
  font-size: 28rpx;
  color: #051426;
}