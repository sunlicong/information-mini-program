.header{
    background: #D14139;
    padding: 40rpx 0 20rpx 0;
    text-align: center;
}
.header .head_portrait{
    width: 150rpx;
    height: 150rpx;
    border:4rpx solid rgba(250,208,16,1);
    border-radius: 50%;
}
.run_out{
    color: #ffffff;
    font-size: 36rpx;
	margin-top: 60rpx;
	margin-bottom: 40rpx;
}
.name_packet{
    font-size:28rpx;
    font-family:PingFangSC-Regular;
    color: #F4BB16;
    margin-top: 20rpx;
}
.name_packet .pin{
    width:27rpx;
    height:31rpx;
    background:rgba(255,255,255,1);
    border-radius:1rpx;
    font-size:24rpx;
    margin-left: 22rpx;
    display: inline-block;
    text-align: center;
    line-height: 31rpx;
}
.packet_text{
    font-size:28rpx;
    color: #FFFFFF;
    margin-top: 20rpx
}
.money{
     color: #FFFFFF;
     margin-top: 30rpx;
}
.money text:nth-child(1){
    font-size:64rpx
 }
 .money text:nth-child(2){
    font-size:32rpx
 }
.hint{
    color: #F4BB16;
    font-size:28rpx;
    margin-top: 30rpx
}
.bottom{
    display: flex;
    margin-top: 35rpx;
}
.bottom .view{
    padding: 11rpx 0 21rpx 0;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}
.gradual{
    position: absolute;
    top: 11rpx;
    right: 0;
    width:2rpx;
      height:49rpx;
      opacity:0.6;
      background:linear-gradient(180deg, rgba(209,65,57,1), rgba(255,255,255,1), rgba(209,65,57,1));
}
.bottom image{
    height: 21rpx;
    width: 21rpx;
    margin-right: 15rpx;
}
.bottom text{
    font-size: 28rpx;
    color: #FFFFFF
}
.bottom .bottom_packet1{
     height: 26rpx;
     width: 31rpx;
}
 .bottom .bottom_packet2{
     height: 25rpx;
     width: 21rpx;
}
 .bottom .bottom_packet3{
     height: 22rpx;
     width: 23rpx;
}
.draw{
    padding: 15rpx 28rpx;
    color: #A3AEBA;
    font-size: 28rpx;
    border-bottom: 1rpx solid #F6F6F6
}
.draw .text{
    color: #D14139;
}

.packet .li{
    padding: 20rpx 30rpx 30rpx 30rpx;
    border-bottom: 1rpx solid #F6F6F6;
    display: flex;
}
.packet image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.packet .center{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
    padding-left: 10rpx;
}
.packet .center_top{
        
   
}
.packet .center_top text:nth-child(1){
    color: #051426;
}
.packet .center_top text:nth-child(2){
    width:27rpx;
    height:31rpx;
    background:rgba(249,131,50,1);
    border-radius:1rpx;
    font-size:24rpx;
    color: #ffffff;
    display: inline-block;
    text-align: center;
    line-height: 31rpx;
    margin-left: 10rpx;
}
.center_bottom{
    color: #A3AEBA;
    font-size: 28rpx
}
.packet .right{
   display: flex;
    flex-direction: column;
    justify-content: space-between;
    color: #051426;
    font-size: 32rpx;
    align-items: flex-end
    
}
.packet .right view:nth-child(2){
    color: #D14139;
    font-size: 20rpx;
    width:100rpx;
   height:32rpx;
   background:rgba(244,187,22,1);
   border-radius:3rpx;
   text-align: center;
}
.GetRedPacket{
    background: #ffffff
}
.message {
    font-size: 28rpx;
    padding: 20rpx 30rpx;
}
.title{
 
    color: #101F30;
}
.message .key{
   
    color: #A3AEBA
}
.message .value{
   
    color: #051426
}
.copy{
    width: 25rpx;
    height: 25rpx;
    margin-left: 10rpx;
}