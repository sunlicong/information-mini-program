/* pages/publish/publish.wxss */
.item{
    margin-top: 1rpx;
    height: 110rpx;
    display: flex;
    flex-direction: row;
    line-height: 110rpx;
    background-color: #fff;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 32rpx;
    color: #051426;
}
.item .input{
    flex: 1;
    text-align: right;
    height: 110rpx;
    line-height: 110rpx;
    margin-left: 20rpx;
}
.item .input_class{
    font-size: 32rpx;
    color:#A3AEBA;
}
.tip{
    margin-left: 30rpx;
    margin-top: 15rpx;
    line-height: 30rpx;
    font-size: 22rpx;
    color: #A3AEBA;
}
.preview{
    position: fixed;
    width: 100%;
    height: 98rpx;
    bottom: 0;
    background-color: #0794FC;
    line-height: 98rpx;
    text-align: center;
    font-size: 36rpx;
    color: #FFFFFF;
}