/* pages/walletItemBonus/walletItemBonus.wxss */

.top {
  width: 100%;
  height: 374rpx;
  position: relative;
  background: #fff;
}

.top_bg {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 92rpx;
}

.top_content {
  position: absolute;
  width: 100%;
  height: 374rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.top_content .name {
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #a3aeba;
}

.top_content .balance {
  margin-top: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 70rpx;
  color: #ff6700;
  display: flex;
}

.yuan {
  margin-left: 10rpx;
  margin-top: 15rpx;
  font-size: 32rpx;
}

.height-120 {
  margin-top: 1rpx;
  width: 100%;
  height: 120rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.left {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.left .title {
  font-size: 32rpx;
  color: #051426;
}

.left .time {
  font-size: 24rpx;
  color: #a3aeba;
}

.right {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 30rpx;
}

.margin-left-30 {
  margin-left: 30rpx;
}

.num {
  line-height: 45rpx;
  font-size: 32rpx;
  color: #fe6503;
}
.get {
  position: fixed;
  left: 50rpx;
  right: 50rpx;
  bottom: 25rpx;
  width: 650rpx;
  height: 98rpx;
  background-color: #ff6700;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  border-radius: 0;
}