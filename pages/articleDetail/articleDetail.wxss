/* pages/articleDetail/articleDetail.wxss */
@import "../../utils/wxParse/wxParse.wxss";

.container {
  padding-bottom: 130rpx;
}

.content {
  background-color: #fff;
}

.title {
  margin: 30rpx 30rpx 0 30rpx;
  font-size: 36rpx;
  color: #051426;
  text-align: justify;
}

.wxParse {
  padding-bottom: 10rpx;
  padding-left: 15px;
  padding-right: 15px;
  margin-left: 0rpx;
  margin-right: 0rpx;
}

.praise {
  margin-top: 20rpx;
  background: #fff;
  text-align: center;
}

.praise .praise_cover {
  margin-top: 30rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  background: red;
}

.praise .praise_text {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #0794fc;
}

.praise .praise_push {
  margin-top: 30rpx;
  width: 260rpx;
  height: 88rpx;
  background: #0794fc;
  border-radius: 8px;
  font-size: 36rpx;
  color: #fff;
}

.praise_push::after {
  border: 0;
}

.praise .praise_count {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #a3aeba;
}

.opt {
  margin-top: 20rpx;
  width: 100%;
  height: 120rpx;
  display: flex;
  background: #fff;
  align-items: center;
}

.opt .opt_item {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon_opt {
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.bottom_bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.bottom_praise{
  width: 230rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottom_share{
  flex: 1;
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-left: 1rpx solid #A3AEBA;
}
.bottom_pay{
  width: 261rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #0794FC;
  text-align: center;
  font-size: 36rpx;
  color: #FFFFFF;
}