/* pages/myWorks/myWorks.wxss */

.tab {
    width: 100%;
    height: 100rpx;
    background: #fff;
}

.tab view {
    width: 50%;
    height: 96rpx;
    line-height: 96rpx;
    display: inline-block;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
}

.tab-select {
    color: #0794fc;
    border-bottom: 4rpx solid #0794fc;
}

.tab-non {
    color: #a3aeba;
}

.margin-top-1 {
    margin-top: 1rpx;
}

.feed {
    background-color: #fff;
}

.myInfo {
    position: relative;
    margin-top: 164rpx;
    margin-left: 170rpx;
    width: 410rpx;
    height: 410rpx;
}

.myInfo .img {
    position: absolute;
    width: 100%;
    height: 100%;
}

.myInfo .info_num {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #fff;
}

.fans_view {
    margin-top: 128rpx;
    margin-left: 35rpx;
    margin-right: 35rpx;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.fans_view .fans_num{
    margin-left: 10rpx;
    margin-right: 10rpx;
    width: 320rpx;
    height: 80rpx;
    line-height: 80rpx;
    border: 2rpx solid #A3AEBA;
    border-radius: 40rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #A3AEBA;
    letter-spacing: 0;
    text-align: center;
}
.publish_btn {
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    text-align: center;
    background-color: #0794fc;
    color: white;
    height: 98rpx;
    font-size: 34rpx;
    line-height: 98rpx;
}
