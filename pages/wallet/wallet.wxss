/* pages/wallet/wallet.wxss */

.top {
    width: 100%;
    height: 372rpx;
    background: linear-gradient(#624af6, #21a4fe);
    position: relative;
}

.balance {
    height: 140rpx;
    line-height: 140rpx;
    margin-top: 84rpx;
    text-align: center;
    font-size: 100rpx;
    color: #fff;
}

.all {
    margin-top: 20rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
}

.height-130 {
    width: 100%;
    height: 120rpx;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.left {
    display: flex;
    align-items: center;
    margin-left: 30rpx;
}
.right {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 30rpx;
}
.margin-left-20 {
    margin-left: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #051426;
}
.size-50 {
    width: 50rpx;
    height: 50rpx;
}
.balance_num {
    line-height: 45rpx;
    font-size: 32rpx;
    color: #051426;
}
.balance_rmb {
    line-height: 33rpx;
    font-size: 24rpx;
    color: #A3AEBA;
}